#include<iostream>
using namespace std;

// Funtions & Prototypes

int sum(int a, int b){
  int c = a + b;
  return c;
}

int main(){
  int num1,num2;
  cout<<"The Value of Number 1 : "<<endl;
  cin>>num1;
  cout<<"The Value of Number 2 : "<<endl;
  cin>>num2;
  cout<<"The Sum is :- "<<sum(num1,num2);
  return 0;
}
